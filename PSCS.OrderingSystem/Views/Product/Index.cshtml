@using PSCS.Domain;

@model ProductSearchViewModel

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-auto">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Add">+</a>
            </div>
            <div class="col">
                <h4 class="pt-1 m-0">Products</h4>
            </div>
            <div class="col-auto">
                <form method="get" action="/Product?Search=@Model.Search">
                    <div class="input-group">
                        <input type="text" class="form-control" asp-for="@Model.Search" placeholder="Name" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body overflow-auto">
        <table class="table table-striped table-hover">
            <thead>
                <tr>             
                    <th class="text-center">ID</th>
                    <th class="">Name</th>
                    <th class="">Description</th>
                    <th class="">Supplier</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Products != null)
                {
                    foreach (Product product in Model.Products)
                    {
                        <tr>
                            <td class="text-center align-middle">@product.Id</td>
                            <td class="align-middle">@product.Name</td>
                            <td class="align-middle">@product.Description</td>
                            <td class="align-middle">@product.Supplier.ToString()</td>
                            <td class="text-center align-middle"><a class="btn btn-warning" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Edit</a></td>
                            <td class="text-center align-middle"><a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">X</a></td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>