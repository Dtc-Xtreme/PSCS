@using PSCS.Domain;

@model Storage

<div class="card">
    <div class="card-header">
        Edit
    </div>
    <div class="card-body">
        <form method="post" action="/Storage/Save">
            <div class="mb-3">
                <label for="id" class="form-label">Id:</label>
                <input type="number" class="form-control" id="id" placeholder="Id" asp-for="@Model.Id" readonly>
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Location:</label>
                <input type="text" class="form-control" id="name" placeholder="Name" asp-for="@Model.Name" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Mloc" id="mloc" />
                <label class="form-check-label" for="mloc">Mloc</label>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Mix" id="mix" />
                <label class="form-check-label" for="mix">Mix</label>
            </div>
            <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" asp-for="@Model.Blocked" id="blocked" />
                <label class="form-check-label" for="blocked">Blocked</label>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>