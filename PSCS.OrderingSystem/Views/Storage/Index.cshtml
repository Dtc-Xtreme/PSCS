@using PSCS.Domain;

@model IList<Storage>

<div class="card">
    <div class="card-header">
        Storages
    </div>
    <div class="card-body">
        <table class="table table-striped-columns">
            <thead>
                <tr>             
                    <th>ID</th>
                    <th>Name</th>
                    <th>Mloc</th>
                    <th>Mix</th>
                    <th>ID</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(Storage storage in Model)
                {
                    <tr>
                        <td>@storage.Id</td>
                        <td>@storage.Name</td>
                        <td>@storage.Mloc</td>
                        <td>@storage.Mix</td>
                        <td>@storage.Blocked</td>
                        <td><a class="btn btn-warning" asp-controller="Storage" asp-action="Edit/@storage.Id">Edit</a></td>
                        <td><a class="btn btn-danger" asp-controller="Storage" asp-action="Delete" asp-route-id="@storage.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>